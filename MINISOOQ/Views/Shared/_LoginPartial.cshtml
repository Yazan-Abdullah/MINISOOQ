@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)!</a>
    </li>
        <li class="nav-item">
        <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="header__top-action">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="header__top-action" id="register" asp-area="Identity" asp-page="/Account/Register">Register |</a>
    </li>
    <li class="nav__item">
            <a class="header__top-action" id="login" asp-area="Identity" asp-page="/Account/Login">Log In</a>
          
    </li>
}
</ul>
